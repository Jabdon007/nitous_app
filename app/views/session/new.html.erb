<% provide(:title, 'Sign in') %>
<h1>Login</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for(:session, url: '/session/create') do |f| %> 
    
    <%= f.input :email, class: "form-control", placeholder: "Email"  %>   
    <%= f.input :password, class: "form-control", placeholder: "Password" %>
    <%= f.input :remember_me,as: :boolean, class: "form-control" %>
  </div>    
  <div class="col-md-4 col-md-offset-4">
    <%= f.button :submit, "Sign in", class: "btn btn-large btn-primary" %>
    New user? <%= link_to "Sign up now!",'users/new' %>
  </div>
  
    <% end %>
  
</div>